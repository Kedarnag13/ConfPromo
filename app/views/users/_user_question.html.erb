<% if @question.present? %>
<div class="col-sm-2">
  <div class="quest-num">
    <span>question</span>
    <div class="number"> <%=  @i %> </div>
  </div>
</div>
<%= form_for :uanswer, url: check_quiz_user_path(question_id: @question, user_id: @user.id,question_ids:@question_ids, qwinix_ids: @qwinix_ids), :method => :post,:remote => true do |f|%>
<div class="col-sm-7">
  <div class="quest-section">
    <div class="question"><%= @question.question %></div>
    <% @choices.each do |choice| %>
    <div class="margin-btm">
      <%= f.radio_button :choosen_answer,  choice.qoption_id %>
      <label for="uanswer_choosen_answer_<%= choice.qoption_id %>" class="normal"><span><span></span></span><%= choice.qoption_text %></label>
    </div>
    <% end %>
  </div>
  <div class="btn-margin-top">
    <%= f.submit @i===15 ? "Submit" : "Next", :class => "btn btn-primary btn-margin-right toggle", :id => "submit_id"%>
  </div>
</div>
<% end %>
<% else %>
<h1>No Questions</h1>
<% end %>
<script type="text/javascript">
  $(document).ready(function(){
    $("#submit_id").click(function(){
      $("#submit_id").addClass('disabled');
    });
  });
</script>